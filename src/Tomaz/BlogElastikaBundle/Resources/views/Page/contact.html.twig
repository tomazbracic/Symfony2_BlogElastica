{# src/Tomaz/BlogElastikaBundle/Resources/views/Page/contact.html.twig #}

{% extends 'TomazBlogElastikaBundle::layout.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}

    <header>
        <h1>Contact symblog</h1>
    </header>

    {% for flashMessage in app.session.flashbag.get('blogger-notice') %}
        <div class="blogger-notice">
            {{ flashMessage }}
        </div>
    {% endfor %}

    <p>Want to contact symblog?</p>

    <form action="{{ path('TomazBlogElastikaBundle_contact') }}" method="POST" {{ form_enctype(form) }} class="blogger">

        {{ form_errors(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.subject) }}
        {{ form_row(form.body) }}

        {{ form_rest(form) }}

        <input type="submit" value="Submit" />

    </form>

{% endblock %}